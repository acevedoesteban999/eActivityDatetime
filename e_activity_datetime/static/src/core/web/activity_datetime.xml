<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-inherit="mail.Activity" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o-mail-Activity-info')]//span[@t-else='']" position="replace">
            <span t-else="" t-attf-class="fw-bolder {{(!props.activity.all_day &amp; &amp; delayTime>0)?'text-warning':'text-danger'}}">
                Today: 
            </span>
        </xpath>
        <xpath expr="//div[hasclass('o-mail-Activity-info')]//span[@t-else='']" position="after">
            <t t-if="!props.activity.all_day and [0,1,-1].includes(delay) ">
               <t t-if="showDatetimeStart">
                    <em class="ps-1 text-muted" t-esc="datetimeStart"/> 
                    to     
                    <em class="text-muted" t-esc="datetimeDeadLine"/> 
               </t>
               <em t-else="" class="ps-1 text-muted" t-esc="datetimeDeadLine"/> 
            </t>
        </xpath>
    </t>
</templates>