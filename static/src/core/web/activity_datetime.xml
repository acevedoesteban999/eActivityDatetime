<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-inherit="mail.Activity" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o-mail-Activity-info')]//span[@t-else='']" position="before">
            <t t-elif="!props.activity.all_day">
                <span t-attf-class="fw-bolder {{delayTime>0?'text-warning':'text-danger'}}">
                    Today 
                </span>
                <em class="text-muted" t-esc="datetimeDeadLine"/> 
            </t>
        </xpath>
    </t>
</templates>