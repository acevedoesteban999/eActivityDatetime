<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_regenerate_repetitive_activities" model="ir.cron">
            <field name="name">Regenerate Repetitive Activities</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="state">code</field>
            <field name="code">model._cron_regenerate_repetitive_activities()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="(DateTime.today() + timedelta(days=1)).strftime('%Y-%m-%d') + ' 00:00:00'"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>