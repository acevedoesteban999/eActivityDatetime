<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="e_activity_crm_inherit_mail_activity_schedule" model="ir.ui.view">
        <field name="name">mail.activity.schedule.view.form.inherit</field>
        <field name="model">mail.activity.schedule</field>
        <field name="inherit_id" ref="mail.mail_activity_schedule_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='note']" position="before">
                <group invisible="res_model != 'crm.lead' or crm_type != 'lead'" >
                    <group>
                        <field name="is_rescheduled"/>
                        <field name="reschedule_days" required="is_rescheduled" invisible="not is_rescheduled"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>