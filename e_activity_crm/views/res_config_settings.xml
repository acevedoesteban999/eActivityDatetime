<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="res_config_settings_view_form_inherit_e_activity_crm" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.crm.auto.activity</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="crm.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='generate_lead_setting_container']" position="inside">
                <setting id="website_crm_iap_reveal_settings"
                        string="Add Activity on create"
                        help="An activity will be automatically created when a new lead is created">
                    <field name="is_auto_create_activity"/>
                    <div class="mt-2"
                        invisible="not is_auto_create_activity">
                        <field name="auto_lead_activity_type_id"
                            required="is_auto_create_activity" class="me-2"/>
                    </div>
                    <div class="mt-2">
                        <field name="auto_lead_time_deadline"
                            widget="float_time_tz"
                            required="is_auto_create_activity"/>
                    </div>                   
                </setting>
            </xpath>
        </field>
    </record>
</odoo>