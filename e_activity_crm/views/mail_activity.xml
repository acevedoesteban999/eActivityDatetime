<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="e_activity_crm_inherit_mail_activity_form" model="ir.ui.view">
        <field name="name">mail.activity.view.form.inherit</field>
        <field name="model">mail.activity</field>
        <field name="inherit_id" ref="mail.mail_activity_view_form_popup"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="before">
                <group invisible="res_model != 'crm.lead' or crm_type != 'lead'">
                    <group >
                        <field name="is_rescheduled"/>
                        <field name="reschedule_days" required="is_rescheduled" invisible="not is_rescheduled"/>
                        <field name="done_reschedule" invisible="not done_reschedule" />
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>