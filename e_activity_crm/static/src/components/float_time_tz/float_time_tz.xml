<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="e_activity_crm.FloatTimeTZ">
        <small class="text-muted ms-1" t-esc="user_tz" />
        <span t-if="props.readonly"  t-esc="formattedValue" />
